        <!--            <id>releases</id>-->
        <!--            <name>Releases</name>-->
        <!--            <url>http://nexus.kmut.com/repository/maven-releases/</url>-->
        <!--        </repository>-->
        <!--        <snapshotRepository>-->
        <!--            <id>snapshots</id>-->
        <!--            <name>Snapshot</name>-->
        <!--            <url>http://nexus.kmut.com/repository/maven-snapshots/</url>-->
        <!--        </snapshotRepository>-->
